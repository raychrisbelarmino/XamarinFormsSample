<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Sample"
             x:Class="Sample.MainPage">

    <Grid>
        <StackLayout Grid.Row="0" Grid.Column="0" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
            <Image Source="Logo" WidthRequest="320" Aspect="AspectFill"/>
            <Entry x:Name="NameEntry" Placeholder="Input name" HorizontalOptions="FillAndExpand" Margin="5,0,5,0" Keyboard="Text" ReturnType="Next"/>
            <Entry x:Name="EmailEntry" Placeholder="Input email" HorizontalOptions="FillAndExpand" Margin="5,0,5,0" Keyboard="Email" ReturnType="Next"/>
            <Entry x:Name="PasswordEntry" Placeholder="Input password" HorizontalOptions="FillAndExpand" Margin="5,0,5,0" Keyboard="Text" IsPassword="True" ReturnType="Done"/>
            <Button Text="Enter" BackgroundColor="Green" BorderRadius="5" HorizontalOptions="Center" TextColor="White" Clicked="Button_Clicked"/>
        </StackLayout>
    </Grid>

</ContentPage>
